<%- include('../../layouts/header') %>
<div class="container">
    <div class="page-header">
        <h1>Monthly Reports</h1>
    </div>
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Report ID</th>
                        <th>District</th>
                        <th>Facility</th>
                        <th>Month</th>
                        <th>Year</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% reports.forEach(report => { %>
                    <tr>
                        <td>#<%= report.report_id %></td>
                        <td><%= report.district %></td>
                        <td><%= report.facility %></td>
                        <td><%= report.reporting_month %></td>
                        <td><%= report.reporting_year %></td>
                        <td>
                            <a href="/reports/pdf/<%= report.report_id %>" class="btn btn-sm">Download PDF</a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../../layouts/footer') %>
