<%- include('../../layouts/header') %>
<div class="container">
    <div class="page-header">
        <h1>User Management</h1>
        <a href="/users/new" class="btn btn-primary">Add User</a>
    </div>
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(usr => { %>
                    <tr>
                        <td><%= usr.username %></td>
                        <td><%= usr.full_name %></td>
                        <td><%= usr.email %></td>
                        <td><%= usr.role %></td>
                        <td><%= usr.is_active ? 'Active' : 'Inactive' %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../../layouts/footer') %>
