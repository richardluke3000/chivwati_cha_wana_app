<%- include('../layouts/header') %>
<div class="container">
    <div style="text-align: center; padding: 4rem 0;">
        <h1 style="font-size: 4rem; color: var(--error); margin: 0;">Error</h1>
        <h2 style="margin: 1rem 0;">Something went wrong</h2>
        <% if (error && error.message) { %>
        <p style="color: var(--text-light); margin-bottom: 2rem;"><%= error.message %></p>
        <% } else { %>
        <p style="color: var(--text-light); margin-bottom: 2rem;">An unexpected error occurred. Please try again.</p>
        <% } %>
        <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
    </div>
</div>
<%- include('../layouts/footer') %>
